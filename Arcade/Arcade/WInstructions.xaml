<Window x:Class="WInstructions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Instructions" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="2" Margin="33,6,33.6,6.6">Instructions</Label>
        <TextBox x:Name="txtInstructions" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Justify" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="0,0.4,-0.4,39" Grid.RowSpan="2"></TextBox>
        <Button x:Name="btnClose" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,-0.4,0">Close</Button>
    </Grid>
</Window>
