<Window x:Class="WGameMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menu" Height="300" Width="150" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblGameName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"></Label>
        <Button x:Name="btnPlay" Height="60" Margin="0,58,0,0" Grid.RowSpan="3" VerticalAlignment="Top" >Play</Button>
        <Button x:Name="btnInstuctions" Grid.Row="2">Instructions</Button>
        <Button x:Name="btnOptions" Grid.Row="3">Options</Button>
        <Button x:Name="btnQuit" Grid.Row="4">Quit</Button>
    </Grid>
</Window>
