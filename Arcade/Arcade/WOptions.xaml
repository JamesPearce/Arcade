<Window x:Class="WOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WOptions" Height="300" Width="300">
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTitle" HorizontalAlignment="center" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="2">lblTitle</Label>
        <Button x:Name="btnSaveAndClose" Grid.Row="2" Width="120" HorizontalAlignment="Left">Save and Close</Button>
        <Button x:Name="btnCloseWithoutSaving" Grid.Row="2" Grid.ColumnSpan="2" Width="120" HorizontalAlignment="right">Close Without Saving</Button>
    </Grid>
</Window>
